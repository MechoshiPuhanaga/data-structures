{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "./lib/typings/",
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib/",
    "paths": {
      "@helpers": ["./helpers"],
      "@helpers/*": ["./helpers/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "files": ["./src/index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
