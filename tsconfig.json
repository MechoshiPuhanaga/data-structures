{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./lib/typings/",
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES2015"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib/",
    "paths": {
      "helpers": ["./src/helpers"],
      "types": ["./src/types"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "sourceMap": true,
    "strict": false,
    "target": "es5"
  },
  "files": ["./src/index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
